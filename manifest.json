{
    "manifest_version": 3,
    "name": "Dark design detector",
    "version": "1.0",
    "description": "Detects dark design in shopping website.",
    "icons": {
        "16": "src/icon.jpg"
    },
    "permissions": ["activeTab", "storage", "scripting", "windows"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["countdown.js"]
      }
    ]
}
  